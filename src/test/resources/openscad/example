echo(version=version());
use <logo.scad>

$vpr = [90, 0, 0];
$vpt = [250, 0, 80];
$vpd = 500;

logosize = 120;

translate([110, 0, 80]) {
  translate([0, 0, 30]) rotate([25, 25, -40]) Logo(logosize);
  translate([100, 0, 40]) green() t("Open", 42, ":style=Bold");
  translate([247, 0, 40]) black() t("SCAD", 42, ":style=Bold");
  translate([100, 0, 0]) black() t("The Programmers");
  translate([160, 0, -30]) black() t("Solid 3D CAD Modeller");
}

wing_w = 2.1;
many = 3;
wing_l = 40;
wing_h = 40;
wing_points = [[0,0],[wing_l,0],[0,wing_h]];

module wing() {
	translate([0,0,0])
	rotate([90,0,0])
	linear_extrude(height = wing_w,center = true)
		polygon(wing_points);
}

for (i = [0: many - 1])
	rotate([0, 0, 360 / many * i])
	wing();

module icosahedron(size) {
   phi=0.5*(sqrt(5)+1);
   st=size/10000;
   hull() {
       cube([size*phi,size,st], true);
       rotate([90,90,0]) cube([size*phi,size,st], true);
       rotate([90,0,90]) cube([size*phi,size,st], true);
   }
}

phi=0.5*(sqrt(5)+1);
size=10;
translate([-20,0,0]) union() {
   cube([size*phi,size,0.01], true);
   rotate([90,90,0]) cube([size*phi,size,0.01], true);
   rotate([90,0,90]) cube([size*phi,size,0.01], true);
}

function f_left(x) =
  let(twist=90,span=180,start=0)
  twist*sin(x*span+start);

icosahedron(size);
